{{!-- The following component displays Ember's default welcome message. --}}
{{!welcome-page}}
{{!-- Feel free to remove this! --}}

{{#if session.isAuthenticated}}
  Logged in as {{session.currentUser.displayName}}
  <button {{action "signOut"}}>Sign out</button>
  {{outlet}}
{{else}}
  <button {{action "signIn" "twitter"}}>Sign in with Twitter</button>
  <br><br>
  Username: {{input type="text" value=username}}<br>
  Password: {{input type="text" value=password}}       
  <br>
  <button {{action "signInPW" "password" username password}}>Login with username</button>
{{/if}}

{{outlet}}